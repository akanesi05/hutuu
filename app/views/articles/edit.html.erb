<h1>記事を編集する</h1>

<%= form_with model: @article do |form| %>
  <p>
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title %>
  </p>
   <div>
   <%= form.label :content %><br>
   <%= form.text_area :content %>
   </div>
  <p>
    <%= form.submit "更新する" %>
  </p>
<% end %>

<%= link_to "戻る", @article %>
